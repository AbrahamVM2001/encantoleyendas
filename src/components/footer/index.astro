---
const nav = [
    { title: 'Inicio', href: '/'},
    { title: 'Nosotros', href: '#about'},
    { title: 'Top Platillos', href: '#popular'},
    { title: 'Menu', href: '#menu'},
    { title: 'Reservación', href: '#reservation'}
];

let date = new Date();
let year = date.getFullYear();
---
<div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
        <a href="https://flowbite.com/" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
            Logo
        </a>
        <ul class="flex flex-wrap items-center mb-6 text-sm font-medium sm:mb-0">
            {nav.map((item) => (
                <li>
                    <a href={item.href} class="hover:underline me-4 md:me-6">{item.title}</a>
                </li>
            ))}
        </ul>
    </div>
    <hr class="my-6sm:mx-auto lg:my-8" />
    <span class="block text-sm sm:text-center">© {year} <a href="https://devabraham.com" class="hover:underline">Ing. Abraham Vera.</a>. Derechos Reservados.</span>
</div>